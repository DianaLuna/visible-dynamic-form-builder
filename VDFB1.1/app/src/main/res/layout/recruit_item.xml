<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/re_title"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:text="topic1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="11dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView

        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="2000-3000元"
        android:gravity="center"
        android:textColor="#FF8247"
        android:layout_alignTop="@+id/re_title"
        android:layout_alignParentEnd="true"
        android:id="@+id/re_money" />


    <TextView
        android:id="@+id/re_request"
        android:layout_width="340dp"
        android:layout_height="34dp"
        android:text="岗位要求\n测试内容"
        android:textSize="14sp"
        android:layout_marginBottom="3dp"
        android:layout_below="@+id/re_title"
        android:layout_alignStart="@+id/re_title" />

    <TextView
        android:id="@+id/deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="截至时间:"
        android:textSize="13sp"

        android:layout_marginEnd="12dp"
        android:layout_below="@+id/re_request"
        android:layout_toStartOf="@+id/re_date" />

    <TextView
        android:id="@+id/re_date"
        android:layout_width="120dp"
        android:gravity="center"
        android:textColor="#FF8247"
        android:layout_height="wrap_content"
        android:text="2017年7月29日"
        android:layout_below="@+id/re_request"
        android:layout_alignParentEnd="true" />

</RelativeLayout>